<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_bg1"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile" />
        </LinearLayout>

        <TextView
            android:id="@+id/demo2"
            android:layout_below="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <RelativeLayout
            android:layout_below="@id/demo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="center"
            >



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/isd2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="150dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/isd_mob2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/isd2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/phone_number"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Reg. Mob. No"
                android:inputType="phone"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/isd_mob2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="210dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="210dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bank_name2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/account"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Bank Name"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="210dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bank_ac2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/bank_name2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/account_number_key"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Bank A/C No."
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="210dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ifsc2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/bank_ac2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/ifsc"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="IFSC Code"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="210dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/upi2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ifsc2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/upi2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="UPI Id"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="280dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pan2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/upi2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/pan"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Pancard No."
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="350dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/adhar2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/pan2"
                android:background="@drawable/tv_shape"
                android:drawableLeft="@drawable/adhar"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Aadhar No."
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="420dp" />





        </RelativeLayout>

    </RelativeLayout>
</ScrollView>